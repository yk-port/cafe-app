<h1>Sign up</h1>

<%= form_with(model: @user, local: true) do |f| %>
  <%= render 'shared/error_messages' %>
  <div>
    <%= f.label :nama %>
    <%= f.text_field :name %>
  </div>
  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>
  <div>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </div>
  <div>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </div>
  <%= f.submit 'sign up!!' %>
<% end %>